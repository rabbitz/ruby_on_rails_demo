<h1>events list</h1>
<% @events.each do |e| %>
  <li>
    <%= e.name %>
    <%#= link_to 'show', :controller => 'events', :action => 'show', :id => e %>
    <%= link_to "查看", event_path(e) %>
    <%#= link_to 'Edit', :controller => 'events', :action => 'edit', :id => e %>
    <%= link_to '更改', edit_event_path(e) %>
    <%#= link_to 'Delete', :controller => 'events', :action => 'destroy', :id => e %>
    <%= button_to '删除', event_path(e), :method => :delete, :data => { :confirm => "确定要删除吗" } %>
  </li>
<% end %>
<%= paginate @events %>
<%#= link_to 'New Event', :controller => 'events', :action => 'new' %>
<%= link_to '新建', new_event_path %>